{
  "dynamicHost": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= context.host %>",
      "path": "/api/planets"
    }
  },
  "dynamicQueryParams": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/search/tickets",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  },
  "listAllTickets": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      },
      "query": {
        "order_type": "desc",
        "order_by": "updated_at"
      }
    }
  },
  "getCompanyContacts": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/contacts",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  },
  "getCompanyDetails": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/companies/<%= context.company_id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  },
  "getCurrentTicket": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets/<%= context.ticket_id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  },
  "getContactById": {
    "schema": {
      "protocol": "https",
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/contacts/<%= context.contact_id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  }
}